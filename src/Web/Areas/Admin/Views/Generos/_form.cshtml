@inherits ModelWebViewPage<TCategory>
<div class="row" style="display: flex; align-items: center; justify-content: center">
    @using (Html.BeginForm())
    {
        <div class="col-lg-12">
            @this.Label(x => x.Name).Class("control-label").Value("Nome:")
            @this.TextBox(x => x.Name).Class("required form-control").Autofocus(true)
            @Html.ValidationMessageFor(x => x.Name)
        </div>
        <div class="col-md-12 text-center" style="margin-top: 15px;">
            <button type="button" class="btn btn-info btn-lg" onclick="location.href='@Url.Action(MVC.Admin.Generos.Index())'">
                <i class="fas fa-th-list"></i> Voltar
            </button>
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-check-circle"></i> Salvar
            </button>
        </div>
    }
</div>
<script type="text/javascript">
    $(function () {
        $("form").validate();
    });
</script>

