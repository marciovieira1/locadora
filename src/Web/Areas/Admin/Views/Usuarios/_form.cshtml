@inherits ModelWebViewPage<TUser>
<div class="row">
    @using (Html.BeginForm())
    {

        <div class="col-lg-12">
            @this.Label(x => x.Name).Class("control-label").Value("Nome:")
            @this.TextBox(x => x.Name).Class("required form-control").Autofocus(true)
            @Html.ValidationMessageFor(x => x.Name)
        </div>
        <div class="col-lg-12">
            @this.Label(x => x.EnumProfileUser).Class("control-label").Value("Perfil:")
            @this.AutoSelect(x => x.EnumProfileUser).Class("required form-control").FirstOption("", "Selecione uma opção")
            @Html.ValidationMessageFor(x => x.EnumProfileUser)
        </div>
        <div class="col-lg-12">
            @this.Label(x => x.Login).Class("control-label").Value("Login:")
            @this.TextBox(x => x.Login).Class("required form-control").Autofocus(true)
            @Html.ValidationMessageFor(x => x.Login)
        </div> 
        if ((bool)ViewBag.MostraSenha)
        {
            <div class="col-lg-12">
                @this.Label(x => x.PasswordString).Class("control-label").Value("Senha:")
                @this.Password(x => x.PasswordString).Class("required form-control")
                @Html.ValidationMessageFor(x => x.PasswordString)
            </div>
        }
        <div class="col-md-12 text-center" style="margin-top: 15px;">
            <button type="button" class="btn btn-info btn-lg" onclick="location.href='@Url.Action(MVC.Admin.Usuarios.Index())'">
                <i class="fas fa-th-list"></i> Voltar
            </button>
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-check-circle"></i> Salvar
            </button>
        </div>
    }
</div>

