@model List<TCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gêneros</h2>
<div class="container">
    <div class="row" style="margin: 30px 0; text-align: right">
        <div class="col-lg-12 text-right">
            <a class="btn btn-primary btn-lg" data-toggle="tooltip" title="Cadastrar"
               href="@Url.Action(MVC.Generos.Cadastrar())">
                <i class="fas fa-plus"></i> Cadastrar
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-sm table-bordered table-hover tablesorter table-striped">
                <thead>
                    <tr>
                        <th>
                            Nome
                        </th>
                        <th>
                            Ação
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td class="text-center">
                                    <a class="btn btn-primary btn-xs" data-toggle="tooltip" title="Editar"
                                       href="@Url.Action(MVC.Generos.Editar(item.Id))">
                                        <i class="fas fa-pencil"></i> Editar
                                    </a>
                                    <button type="button" class="btn btn-danger btn-xs ajax-modal" data-toggle="tooltip" title="Excluir"
                                            href="@Url.Action(MVC.Generos.Excluir(item.Id))">
                                        <i class="fas fa-trash"></i> Excluir
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>